#!/bin/bash
set -e

source common.sh

connect() {
  setrepo "$1"
  git remote add origin "$2/.pairon" \
    || git remote set-url origin "$2/.pairon" \
    || true
  git push -u origin master &>/dev/null || true
}

REMOTE="${1}"
LOCAL="${2-.}"

if [ "$REMOTE" ]; then
  REMOTE_FILE="${REMOTE#*:}"
  grep -q : <<<"$REMOTE" && ssh_mode="ssh ${REMOTE%%:*} -- "

  $ssh_mode test -d "$REMOTE_FILE" || remote_empty=1
  [[ -d "$LOCAL" && "`find "$LOCAL"/* -maxdepth 0`" ]] || local_empty=1

  if [[ "$local_empty" && "$remote_empty" ]]; then
    pairon init "$REMOTE"
    pairon clone "$REMOTE" "$LOCAL"
  elif [[ ! "$local_empty" && "$remote_empty" ]]; then
    pairon init --no-commit "$REMOTE"
    pairon init "$LOCAL"
    connect "$LOCAL" "$REMOTE"
  elif [[ "$local_empty" && ! "$remote_empty" ]]; then
    pairon clone "$REMOTE" "$LOCAL"
  elif [[ ! "$local_empty" && ! "$remote_empty" ]]; then
    pairon init "$LOCAL"
    connect "$LOCAL" "$REMOTE"
  fi
fi

pairon listen "$LOCAL"
